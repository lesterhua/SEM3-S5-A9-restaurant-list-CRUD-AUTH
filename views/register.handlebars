<h1 class="mb-1 restaurant-show-title">使用者註冊</h1>
<div class="row mt-3">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Register</h1>
      <form action="/users/register" method="POST">

        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" name="name" id="name" placeholder="Enter Name" class="form-control" value="{{{name}}}">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" placeholder="Enter Email" class="form-control"
            value="{{{email}}}">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" placeholder="Enter Password" class="form-control"
            value="{{{password}}}">
        </div>

        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" name="password2" id="password2" placeholder="Confirm Password" class="form-control"
            value="{{{password2}}}">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>